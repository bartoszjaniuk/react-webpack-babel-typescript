// "lib": ["dom", "dom.iterable", "esnext"],
// "module": "commonjs",  commonjs, amd, umd, system, es6, esnext,
// "moduleResolution": "node",  common: node  , old: classic
// "forceConsistentCasingInFileNames": true, Ensures that filenames in import statements match the case of the actual files on disk.
// "allowSyntheticDefaultImports": true, Allows default imports from modules with no default export.
// "isolatedModules": false,
// "noEmit": true,  Disables emitting output files during the compilation. It's set to true, meaning no JavaScript files will be generated.

// it's all for type checking

{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"noEmit": false,
		"isolatedModules": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/**/*"],
	"exclude": ["node_modules", "dist"]
}
